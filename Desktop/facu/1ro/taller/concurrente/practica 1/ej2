programa ej2
procesos
  proceso 
  fin
areas
  ciudad: AreaC (10,10,30,30)
robots
  robot r1
  variables
  cantP: numero
  comenzar
    cantP:= 0
    repetir 20
      mientras(HayPapelEnLaEsquina)
        tomarPapel
        cantP:= cantP + 1
       mover
     Informar(cantP) 
  fin
  robot r2
  variables
  cantP: numero
    comenzar
      derecha
      cantP:= 0
     repetir 20
        mientras(HayPapelEnLaEsquina)
          tomarPapel
          cantP:= cantP + 1
         mover
     Informar(cantP) 
   fin
   robot r3
   variables
   cantP: numero
   comenzar
     cantP:= 0
     repetir 2
       derecha
     repetir 20
       mientras(HayPapelEnLaEsquina)
         tomarPapel
         cantP:= cantrP + 1
       mover  
     Informar(cantP)  
   fin
   robot r4
   variables
   cantP: numero
   comenzar
     cantP:= 0
     repetir 3
       derecha
     repetir 20
       mientras(HayPapelEnLaEsquina)
         tomarPapel
         cantP:= cantrP + 1
       mover  
     Informar(cantP)  
   fin     
variables
comenzar
  AsignarArea(r1,ciudad)
  Iniciar(r1,10,10)
  AsignarArea(r2,ciudad)
  Iniciar(r2,10,30)
  AsignarArea(r3,ciudad)
  Iniciar(r3,30,30)
  AsignarArea(r4,ciudad)
  Iniciar(r4,30,10)
fin